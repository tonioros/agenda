<% include ../Shared/layout %>
    <div class="row" ng-controller="userController">
        <div class="col-lg-6" >
            <div class="form-inline">
                <input type="text" class="form-control" style="margin: 1px 5px" placeholder="Buscar..." ng-model="searchUS" /><button type="button" class="btn btn-sm btn-outline-success" data-target="#agregarUSMO" data-toggle="modal">Agregar</button>
            </div>
            <table class="table table-hover table-bordered">
                <thead class="thead-inverse">
                    <tr>
                        <th>#</th><th>Nombre</th><th>Apellido</th><th>Telefono</th><th>Correo</th><th>Categoria</th><th>Opciones</th>
                    </tr>
                </thead>
                <tbody data-ng-repeat="user in userList | filter: searchUS">
                     <tr>
                        <td>{{user.idContacto}}</td><td>{{user.nombre}}</td><td>{{user.apellido}}</td><td>{{user.telefono}}</td><td>{{user.correo}}</td><td>{{user.nombreCategoria}}</td><td><div class="btn-group"><button type="button" class="btn btn-outline-warning">Modificar</button><button type="button" class="btn btn-outline-danger">Borrar</button></div></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
<% include agregarMO %>
<% include ../Shared/footer %>